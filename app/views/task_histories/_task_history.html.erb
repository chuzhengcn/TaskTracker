<div class="task_histories_outer">
  <h1>任务历史</h1>
  <% if @task.task_histories.blank? %>
    <div class="no_task">暂无历史</div>
  <% else %>
  
    <% @task.task_histories.each do |history| %>
      <div class="task_history_item">
        <div class="task_history_meta">
          <%= history.state.name %><br/><%= history.user.name %><br/><%= time_ago_in_words history.created_at %><br/>
          <%= link_to '删除', task_task_history_path(@task,history),:method=> :delete,:confirm => '确定删除？' %>
        </div>
        <div class="history_content"> <%= simple_format history.content %> </div> 
        <div class="clear"></div>
   </div>
  <% end %>
 
<% end %>
</div>
