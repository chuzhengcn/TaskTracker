<!DOCTYPE html>
<html>
<head>
  <title>平台项目进度表</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <link href="/plugins/jquery-ui-1.8.14/css/redmond/jquery-ui-1.8.14.custom.css" media="screen" rel="stylesheet" type="text/css" />
  <script src="/plugins/jquery-ui-1.8.14/js/jquery-ui-1.8.14.custom.min.js" type="text/javascript"></script>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container">
    <header><%= link_to "平台项目进度表",tasks_path %>
    <%= form_tag search_tasks_path,:method => :get do %>
      <%= text_field_tag "keyword","",:Placeholder => "任务名" %>
    <%end%>
    </header>
    <div class="content">
      <div class="flash_notice"><%= flash[:notice] %></div>
    <%= yield %>
  </div>
  </div>
</body>
</html>
